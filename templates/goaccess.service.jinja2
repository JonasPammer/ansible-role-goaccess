{{ ansible_managed | comment }}
[Unit]
Description={{ goaccess_systemd_description }}
After=network.target

[Service]
Restart=always
# Configuration is grabbed from the user's home directory:
WorkingDirectory={{ goaccess_conf_file_dir }}
ExecStart=goaccess --real-time-html {{ goaccess_systemd_html_output_location }}
User={{ goaccess_conf_file_owner }}
Group={{ goaccess_conf_file_group }}

[Install]
WantedBy=multi-user.target